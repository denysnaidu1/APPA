<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <TextView
            android:gravity="center"
            android:text="Prosedur Donasi Barang"
            android:textColor="@color/teks_fitur"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:text="Donasi Barang dilakukan dengan perantara organisasi kemahasiswaan yang ada di Kota Medan."
            android:textColor="@color/teks_fitur"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text=" DONATUR -> ORGANISASI -> PANTI ASUHAN"
            android:textColor="@color/teks_fitur"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10dp"
            android:text="Prosedur : "
            android:textColor="@color/teks_fitur"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="5dp"
            android:text="1. Donatur mencari target panti yang ingin di donasikan "
            android:textColor="@color/teks_fitur"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:text="2. Donatur mencari organisasi mahasiswa yang ingin dijadikan perantara, melalui fitur organisasi di tampilan home"
            android:layout_marginTop="5dp"
            android:textColor="@color/teks_fitur"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:text="3. Setelah selesai memilih, masuk ke fitur Donasi  yang ada di tampilan home"
            android:textColor="@color/teks_fitur"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:text="4. Pada tampilan Donasi barang, Klik lanjut dan ikuti langkah - langkahnya hingga selesai dan Donasi akan diproses."
            android:textColor="@color/teks_fitur"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"/>


        <Button
            android:id="@+id/btn_goBarang"
            android:background="@color/colorPrimary"
            android:text="Lanjut"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>