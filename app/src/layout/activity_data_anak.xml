<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dataAnak"
    android:orientation="vertical">

    <RelativeLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fotoAnak"
            android:src="@drawable/man"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="2dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/nama"
            android:textColor="@color/teks_fitur"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_below="@id/fotoAnak"
            android:text="Ratna Sarum"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/jk"
            android:textColor="@color/teks_fitur"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_below="@id/nama"
            android:text="Perempuan"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/umur"
            android:textColor="@color/teks_fitur"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_below="@id/jk"
            android:text="13 Tahun"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/teks_fitur"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_below="@id/umur"
            android:text="Masak, Membaca"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>