<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".donasiUang"
    android:padding="10dp">

        <LinearLayout
            android:padding="2dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="#000"
                android:textSize="18sp"
                android:text="No.Rek Panti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/ed_rekPanti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="tulis no rek" />

            <TextView
                android:layout_marginTop="7dp"
                android:textColor="#000"
                android:textSize="18sp"
                android:text="Nominal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/ed_nominalDonasi"
                android:hint="1.234.000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="7dp"
                android:textColor="#000"
                android:textSize="18sp"
                android:text="Metode Pembayaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="1dp"
                    app:cardCornerRadius="5dp">

                    <RelativeLayout
                        android:id="@+id/atas1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/rb_mandiri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mandiri"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:onClick="checkedButton"/>

                        <ImageView
                            android:scaleType="centerCrop"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="7dp"
                            android:src="@drawable/mandiri" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
               <android.support.v7.widget.CardView
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="1dp"
                    app:cardCornerRadius="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:layout_centerVertical="true"
                            android:id="@+id/rb_BNI"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BNI"
                            android:textSize="16sp"
                            android:onClick="checkedButton"/>

                        <ImageView

                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="7dp"
                            android:src="@drawable/logo_bni" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="1dp"
                    app:cardCornerRadius="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:layout_centerVertical="true"
                            android:id="@+id/rb_BCA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BCA"
                            android:textSize="16sp"
                            android:onClick="checkedButton"/>

                        <ImageView
                            android:scaleType="centerCrop"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="7dp"
                            android:src="@drawable/bca" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="1dp"
                    app:cardCornerRadius="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:layout_centerVertical="true"
                            android:id="@+id/rb_BRI"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BRI"
                            android:textSize="16sp"
                            android:onClick="checkedButton"/>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="7dp"
                            android:src="@drawable/logo_bri" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                android:layout_alignParentBottom="true"
                android:background="#FF9100"
                android:textSize="18sp"
                android:text="Donasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="goKonfirmasi_uang"/>
            </RelativeLayout>


        </LinearLayout>



</android.support.constraint.ConstraintLayout>