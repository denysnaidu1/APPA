<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".konfirmasiDonasiUang">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:src="@drawable/konfirmasiduangfoto"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="150dp" />
    <android.support.v7.widget.CardView
        app:cardElevation="5dp"
        app:cardCornerRadius="7dp"
        android:layout_margin="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="#000"
                android:textSize="22sp"
                android:gravity="center_horizontal"
                android:text="Terimakasih Denys"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />


            <TextView
                android:layout_marginTop="7dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:id="@+id/idTransaksi"
                android:text="ID Transaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:textColor="#000"
                android:textSize="16sp"
                android:text="Silahkan transfer dana sebesar :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#fd6f01"
                android:id="@+id/txt_nominal"
                android:text="Rp. 00000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:text="Dengan tujuan no Rekening :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="25dp"
                android:textSize="18sp"
                android:textColor="#000"
                android:id="@+id/txt_noRek"
                android:text="No Rekening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#000"
                android:gravity="center"
                android:textSize="12dp"
                android:padding="5dp"
                android:background="#FFE0B2"
                android:layout_marginTop="5dp"
                android:text="DIHIMBAU agar transfer dengan nominal 3 digit terakhir yang sama persis seperti yang ditampilkan diatas."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtDate"
                android:gravity="center"
                android:background="#FFF3E0"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        
    </android.support.v7.widget.CardView>

        <Button
            android:onClick="backToHome"
            android:layout_marginTop="7dp"
            android:layout_gravity="center"
            android:background="#fd6f01"
            android:text="Kembali ke hOME"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>