<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#efb282"
    app:cardCornerRadius="7dp"
    android:elevation="17dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/panti_image1"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="180dp" />

        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="#000"
            android:id="@+id/panti_name12"
            android:textSize="20sp"
            android:text="Nama Panti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:id="@+id/donasi"
                android:text="Donasi Sementara"
                android:layout_marginLeft="5dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toRightOf="@id/donasi"
                android:layout_marginLeft="30dp"
                android:textColor="#000"
                android:id="@+id/donasi_sementara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Donasi"/>
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>