<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profilOrganisasi">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/kmpl1"
            android:id="@+id/fotoPanti"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            />


        <ScrollView
            android:layout_marginTop="10dp"
            android:scrollbars="none"
            android:layout_below="@id/fotoPanti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/teks_fitur"
                    android:text="Nama Organisasi  : Nama "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="@color/teks_fitur"
                    android:text="Tanggal Didirikan : Tanggal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="@color/teks_fitur"
                    android:text="Alamat           :"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/teks_fitur"
                    android:text="Jl Kom L Yos Sudarso, No. 10, Glugur Kota, Medan Barat."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="@color/teks_fitur"
                    android:text="Contact Person   :"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="30dp"
                        android:src="@mipmap/handphone_round"
                        android:id="@+id/handphone"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:id="@+id/nohp"
                        android:layout_toRightOf="@id/handphone"
                        android:layout_marginLeft="15dp"
                        android:textSize="20dp"
                        android:textColor="@color/teks_fitur"
                        android:text="0812-7586-8566"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/handphone"
                        android:layout_marginLeft="30dp"
                        android:src="@mipmap/telephone_round"
                        android:id="@+id/telephone"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/nohp"
                        android:id="@+id/notelephone"
                        android:layout_toRightOf="@id/telephone"
                        android:layout_marginLeft="15dp"
                        android:textSize="20dp"
                        android:textColor="@color/teks_fitur"
                        android:text="(061) 6613840"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>


            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>